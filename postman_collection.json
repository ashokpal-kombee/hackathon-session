  "item": [
    {
      "name": "Analyze Logs - Database Issue",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"logs\": [\n    {\n      \"message\": \"DB timeout\",\n      \"timestamp\": \"2024-02-14 12:00:00\",\n      \"raw\": \"ERROR: Database connection timeout after 30s\"\n    },\n    {\n      \"message\": \"DB timeout\",\n      \"timestamp\": \"2024-02-14 12:01:00\",\n      \"raw\": \"ERROR: Database connection timeout after 30s\"\n    },\n    {\n      \"message\": \"DB connection reset\",\n      \"timestamp\": \"2024-02-14 12:02:00\",\n      \"raw\": \"ERROR: Connection reset by peer\"\n    }\n  ],\n  \"metrics\": {\n    \"cpu_usage\": 85,\n    \"memory_usage\": 70,\n    \"db_latency\": 400,\n    \"requests_per_sec\": 1200\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/analyze",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "analyze"]
        }
      }
    },
